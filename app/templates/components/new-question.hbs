{{#if addNewQuestion}}
  <div class="row">
    <div class="" id="newQuestion">
      <button class="btn" {{action 'questionFormHide'}}>Back</button>
      <form>
        <h2>Ask a Question</h2>
        <div>
          <label for="author">Name:</label>
          {{input value=author id='author'}}
        </div>
        <div>
          <label for="question">Question:</label>
          {{textarea value=question id='question'}}
        </div>
        <div>
          <label for="notes">Notes:</label>
          {{input value=notes id='notes'}}
        </div>
        <button class="btn" {{action 'saveQuestion'}}>Save</button>
      </form>
    </div>
  </div>
{{else}}
  <button class="btn" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
