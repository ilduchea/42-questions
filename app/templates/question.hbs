<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title">
      {{model.question.question}}
    </h3>
  </div>
  <div class="panel-body">
    <p></p>
    <p>{{model.question.notes}}</p>
    <p class="footer">asked by:
      {{model.question.author}} on
      {{model.question.created}}
    </p>
  </div>
</div>
<button {{action 'deleteQuestion' model.question}}>Delete</button>
{{update-question model=model parms=params updateQuestion="updateQuestion"}}
<hr>
{{new-answer saveAnswer="saveAnswer" model=model}}
{{#each model.question.answers as |answer|}}
  {{display-answer answer=answer destroyAnswer="destroyAnswer" updateAnswer="updateAnswer"}}
{{/each}}
